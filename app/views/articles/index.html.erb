<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'show', article_path(article), class: "show_#{article.id}" %></td>
        <td><%= link_to 'edit', edit_article_path(article), class: "edit_#{article.id}" %></td>
        <td><%= link_to 'destroy', article_path(article),method: :delete, class: "destroy_#{article.id}" %></td>
      </tr>
    <% end %>
  </tbody>   
</table>

<h3>New post</h3>
  <%= form_for :article, url: articles_path do |f| %>

<h4>Title</h4>
  <%= f.text_field :title, class: "book_title" %><br>

<h4>Body</h4>  
  <%= f.text_area :text, class: "book_body" %>
  
  <br><%= f.submit 'Create Book' %>

<% end %>